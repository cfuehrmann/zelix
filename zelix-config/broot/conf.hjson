# For the content of this file, see the Broot documentation

verbs: [
    {
        key: enter
        apply_to: text_file
        execution: "zelix find-in-helix ~/zelix {file}" # Change ~/zelix into something else if needed
        leave_broot: false
    },
    {
        shortcut: o
        apply_to: text_file
        execution: "zelix open-in-helix ~/zelix {file}" # Change ~/zelix into something else if needed
        leave_broot: false
    }
]
